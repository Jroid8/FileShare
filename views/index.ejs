<!DOCTYPE html>
<html>

	<head>
		<title>
			<%= title %>
		</title>
		<meta charset="utf-8" />
		<link href="/fileshare/dist/tailwind.css" rel="stylesheet">
		<script src="/fileshare/qrcode/qrcode.min.js"></script>
	</head>

	<body
		class="m-0 p-0 text-black box-border w-screen h-screen text-md md:text-lg transflow-x-hidden bg-zinc-100">
		<div class="overflow-x-hidden">
			<div
				class="w-screen flex items-center text-center justify-start m-2 md:justify-between md:m-8  md:text-md ">
				<button
					class="shadow-bx2 m-2 px-2 transition-all duration-2 ease-in-out md:px-4 py-2 rounded-md hover:shadow-bx bg-white "
					onclick="back()">‚óÄÔ∏è Back</button>
				<div
					class="shadow-bx2 m-2 px-2 transition-all duration-2 ease-in-out md:px-4 py-2 rounded-md hover:shadow-bx bg-white ">
					<input type="checkbox" onchange="toggle_hidden()" <%=show_hidden ?
						"checked"
						: "" %>>
					<span class>
						Show hidden files
					</span>
				</div>
				<button
					class="shadow-bx2 m-2 px-2 transition-all duration-2 ease-in-out md:px-4 py-2 rounded-md hover:shadow-bx bg-white "
					onclick="upload()">üì§Upload</button>
				<div id="progress-bar">
					<div id="progress">
					</div>
				</div>
			</div>
			<div id="folderview"
				class="flex flex-col m-5 ">
				<% directory.forEach(file=> { %>
				<a href="/<%= file.path %>"
					class=" hover:ml-8 m-5 py-3 hover:shadow-bx3 transition-all duration-5 ease-in-out">
					<%= (file.isDir ? "üìÅ" : "üìÑ" ) + " " + file.name %>
				</a>
				<% }) %>
			</div>
		</div>
		<script src="/FileShare/script.js"></script>
		<div id="qrcode"></div>
		<script>new QRCode(document.getElementById("qrcode"), "<%= address %>")</script>
	</body>

</html>
